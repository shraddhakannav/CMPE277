<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/value_unit_container"
      >

    <TextView
        android:id="@+id/txtVwX"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:text="Value"
        android:textColor="@color/app_color"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/txtVwUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="unit"
        android:layout_toRightOf="@id/txtVwX"
        android:textSize="15dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="16dp"
        />
  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/time_stamp_container"
      android:layout_marginTop="15dp"
      >

    <TextView
        android:id="@+id/txtVwTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Time"
        android:textSize="15dp"
        android:fontFamily="sans-serif-light"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      >

    <TextView
        android:id="@+id/txtVwTrustStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Trust: "
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtVwTrust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Trust value"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"
        />
  </LinearLayout>


</LinearLayout>