<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_grid_item_table"
    android:orientation="vertical"
android:layout_centerHorizontal="true"
    >

        <ImageView
            android:src="@drawable/sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensoricon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SensorValue"
            android:text="Test data"
            android:textSize="20dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/sensoricon"
            android:layout_toRightOf="@+id/sensoricon"
            android:layout_toEndOf="@+id/sensoricon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Unit"
            android:text="Test data"
            android:textSize="10dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/SensorValue"
            android:layout_toRightOf="@+id/SensorValue"
            android:layout_toEndOf="@+id/SensorValue"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SensorLabel"
        android:text="Test data"
        android:textSize="10dp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/SensorValue"
        android:layout_alignLeft="@+id/SensorValue"
        android:layout_alignStart="@+id/SensorValue"
        />

</RelativeLayout>

